<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription, UseCompoundDrawables, UselessParent">

    <LinearLayout
        android:id="@+id/nda_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/nda_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_not_available" />

        <TextView
            android:id="@+id/nda_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="@string/news_nda"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>